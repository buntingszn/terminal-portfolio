<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalUrl} />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />

    <!-- Font preloading -->
    <link
      rel="preload"
      href="/fonts/JetBrainsMono-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/JetBrainsMono-Bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content={meta.name} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <title>{title}</title>
    <ClientRouter />
    <script is:inline>
      ;(function () {
        function hexToRgb(hex) {
          const n = parseInt(hex.slice(1), 16)
          return [(n >> 16) & 255, (n >> 8) & 255, n & 255]
        }
        function relativeLuminance(r, g, b) {
          const a = [r, g, b].map(function (c) {
            c /= 255
            return c <= 0.03928 ? c / 12.92 : Math.pow((c + 0.055) / 1.055, 2.4)
          })
          return 0.2126 * a[0] + 0.7152 * a[1] + 0.0722 * a[2]
        }
        function clamp(v) { return Math.max(0, Math.min(255, v)) }
        function deriveAndApply(bgHex) {
          const rgb = hexToRgb(bgHex)
          const lum = relativeLuminance(rgb[0], rgb[1], rgb[2])
          const isDark = lum < 0.179
          const fg = isDark ? '#ffffff' : '#000000'
          const shift = isDark ? 25 : -25
          const border = '#' + [clamp(rgb[0]+shift), clamp(rgb[1]+shift), clamp(rgb[2]+shift)]
            .map(function(c){ return c.toString(16).padStart(2,'0') }).join('')
          const tokens = {
            '--bg': bgHex, '--fg': fg, '--accent': fg,
            '--accent-glow': fg, '--muted': fg, '--border': border
          }
          const el = document.documentElement
          for (const k in tokens) el.style.setProperty(k, tokens[k])
        }
        function applyTheme() {
          if (sessionStorage.getItem('random-mode') === '1') {
            const bg = sessionStorage.getItem('random-bg')
            if (bg) { deriveAndApply(bg); return }
          }
          const props = ['--bg','--fg','--accent','--accent-glow','--muted','--border']
          for (let i = 0; i < props.length; i++) document.documentElement.style.removeProperty(props[i])
          const theme =
            localStorage.getItem('theme') ||
            (window.matchMedia('(prefers-color-scheme: light)').matches
              ? 'light'
              : 'dark')
          document.documentElement.setAttribute('data-theme', theme)
        }
        applyTheme()
        document.addEventListener('astro:after-swap', applyTheme)
      })()
    </script>
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to content</a>
    <BootSequence />
    <main id="main-content">
      <slot />
    </main>
    <CommandBar />
    <HelpOverlay />
    <KeyboardNav />
    <script is:inline>
      ;(function () {
        const sectionOrder = { '/': 0, '/work': 1, '/cv': 2, '/links': 3 }
        let pendingDir = 'none'

        function getIndex(path) {
          const clean = path === '' ? '/' : path.replace(/\/$/, '') || '/'
          return sectionOrder[clean] != null ? sectionOrder[clean] : -1
        }

        document.addEventListener('astro:before-preparation', function (e) {
          const fromIdx = getIndex(window.location.pathname)
          const toIdx = getIndex(new URL(e.to, window.location.origin).pathname)
          pendingDir = 'none'
          if (fromIdx >= 0 && toIdx >= 0 && fromIdx !== toIdx) {
            pendingDir = toIdx > fromIdx ? 'forward' : 'backward'
          }
        })

        document.addEventListener('astro:after-swap', function () {
          const main = document.getElementById('main-content')
          if (!main || pendingDir === 'none') return
          const anim = pendingDir === 'forward' ? 'slide-in-from-right' : 'slide-in-from-left'
          main.style.animation = 'none'
          void main.offsetHeight // force reflow to restart animation
          main.style.animation = anim + ' 150ms cubic-bezier(0.4, 0, 0.2, 1) both'
          main.addEventListener('animationend', function handler() {
            main.style.animation = ''
            main.removeEventListener('animationend', handler)
          })
          pendingDir = 'none'
        })
      })()
    </script>
    <script is:inline>
      ;(function () {
        const chars = '!@#$%^&*_+-=[]{}|;:<>?/~0123456789'
        let interval = null
        let mx = 0
        let my = 0

        function spawn() {
          const p = document.createElement('span')
          p.className = 'mouse-particle'
          p.textContent = chars[Math.floor(Math.random() * chars.length)]
          const angle = Math.random() * Math.PI * 2
          const dist = 15 + Math.random() * 35
          p.style.left = mx + 'px'
          p.style.top = my + 'px'
          p.style.setProperty('--dx', Math.cos(angle) * dist + 'px')
          p.style.setProperty('--dy', Math.sin(angle) * dist + 'px')
          document.body.appendChild(p)
          p.addEventListener('animationend', function () { p.remove() })
        }

        document.addEventListener('mousemove', function (e) {
          mx = e.pageX
          my = e.pageY
        })

        document.addEventListener('mousedown', function (e) {
          mx = e.pageX
          my = e.pageY
          spawn()
          interval = setInterval(spawn, 50)
        })

        document.addEventListener('mouseup', function () {
          clearInterval(interval)
          interval = null
        })
        function forwardScroll() {
          const pc = document.querySelector('.page-content')
          if (!pc) return
          if (!pc.querySelector('.scroll-fade')) {
            const fade = document.createElement('div')
            fade.className = 'scroll-fade'
            pc.appendChild(fade)
          }
          function checkBottom() {
            const atBottom = pc.scrollHeight - pc.scrollTop - pc.clientHeight < 2
            const noScroll = pc.scrollHeight <= pc.clientHeight
            if (atBottom || noScroll) {
              pc.classList.add('scrolled-bottom')
            } else {
              pc.classList.remove('scrolled-bottom')
            }
          }
          checkBottom()
          pc.addEventListener('scroll', checkBottom, { passive: true })
          document.addEventListener('wheel', function (ev) {
            pc.scrollTop += ev.deltaY
          }, { passive: true })
        }
        forwardScroll()
        document.addEventListener('astro:after-swap', forwardScroll)
      })()
    </script>
    <script is:inline>
      ;(function () {
        if (window.matchMedia('(hover: hover)').matches) return
        const pages = ['/', '/work', '/cv', '/links']
        let startX = 0
        let startY = 0
        document.addEventListener('touchstart', function (e) {
          startX = e.touches[0].clientX
          startY = e.touches[0].clientY
        }, { passive: true })
        document.addEventListener('touchend', function (e) {
          const dx = e.changedTouches[0].clientX - startX
          const dy = e.changedTouches[0].clientY - startY
          if (Math.abs(dx) < 50 || Math.abs(dy) > Math.abs(dx)) return
          const path = window.location.pathname.replace(/\/$/, '') || '/'
          const idx = pages.indexOf(path)
          if (idx < 0) return
          const next = dx < 0 ? idx + 1 : idx - 1
          if (next < 0 || next >= pages.length) return
          window.location.href = pages[next]
        }, { passive: true })
      })()
    </script>
  </body>
</html>

<style is:global>
  @import '../styles/fonts.css';
  @import '../styles/tokens.css';
  @import '../styles/typography.css';
  @import '../styles/animations.css';

  .skip-link {
    position: absolute;
    top: -100%;
    left: 0;
    z-index: 1100;
    padding: 0.5rem 1rem;
    background: var(--accent);
    color: var(--bg);
    text-decoration: none;
  }

  .skip-link:focus {
    top: 0;
  }

  /* Minimal reset */
  *,
  *::before,
  *::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-size: 1rem;
    -webkit-text-size-adjust: 100%;
  }

  body {
    font-family: 'JetBrains Mono', monospace;
    background-color: var(--bg);
    color: var(--fg);
    line-height: 1.6;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    overflow: hidden;
  }

  main {
    width: 100%;
    max-width: 80ch;
    height: 100%;
    padding: 1rem 1rem 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    overflow: hidden;
  }

  .page-content {
    position: relative;
  }

  .page-content .scroll-fade {
    position: sticky;
    bottom: 0;
    left: 0;
    right: 0;
    height: 5rem;
    margin-top: -5rem;
    background: linear-gradient(to bottom, transparent 0%, color-mix(in srgb, var(--bg), transparent 60%) 40%, var(--bg) 100%);
    pointer-events: none;
    z-index: 10;
    flex-shrink: 0;
    transition: opacity 0.3s ease;
  }

  .page-content.scrolled-bottom .scroll-fade {
    opacity: 0;
  }

  @media (max-width: 640px) {
    body {
      padding: 1rem;
    }

    .page-content .scroll-fade {
      height: 3rem;
      margin-top: -3rem;
    }
  }

  @media (min-width: 768px) {
    main {
      max-height: 75vh;
    }
  }

  .page-content {
    flex: 1;
    overflow-y: auto;
    min-height: 0;
    display: flex;
    flex-direction: column;
    scrollbar-width: none;
  }

  .page-content::before,
  .page-content::after {
    content: '';
    flex: 1;
  }

  .mouse-particle {
    position: absolute;
    pointer-events: none;
    color: var(--accent);
    opacity: 0.7;
    animation: mouse-particle-drift 1.5s ease-out forwards;
  }

  @keyframes mouse-particle-drift {
    0% {
      transform: translate(0, 0);
      opacity: 0.7;
    }
    100% {
      transform: translate(var(--dx), var(--dy));
      opacity: 0;
    }
  }
</style>
