---
import { ClientRouter } from 'astro:transitions'
import { getMeta } from '../lib/data'
import KeyboardNav from '../components/KeyboardNav.astro'
import CommandBar from '../components/CommandBar.astro'
import HelpOverlay from '../components/HelpOverlay.astro'
import BootSequence from '../components/BootSequence.astro'

interface Props {
  title: string
  description?: string
}

const meta = getMeta()
const { title, description = meta.oneLiner } = Astro.props
const canonicalUrl = new URL(Astro.url.pathname, meta.siteUrl).href
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Font preloading -->
    <link
      rel="preload"
      href="/fonts/JetBrainsMono-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/JetBrainsMono-Bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content={meta.name} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <title>{title}</title>
    <ClientRouter />
    <script is:inline>
      ;(function () {
        function applyTheme() {
          const theme =
            localStorage.getItem('theme') ||
            (window.matchMedia('(prefers-color-scheme: light)').matches
              ? 'light'
              : 'dark')
          document.documentElement.setAttribute('data-theme', theme)
        }
        applyTheme()
        document.addEventListener('astro:after-swap', applyTheme)
      })()
    </script>
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to content</a>
    <BootSequence />
    <main id="main-content">
      <slot />
    </main>
    <CommandBar />
    <HelpOverlay />
    <KeyboardNav />
    <script is:inline>
      ;(function () {
        const sectionOrder = { '/': 0, '/work': 1, '/cv': 2, '/links': 3 }
        let pendingDir = 'none'

        function getIndex(path) {
          const clean = path === '' ? '/' : path.replace(/\/$/, '') || '/'
          return sectionOrder[clean] != null ? sectionOrder[clean] : -1
        }

        document.addEventListener('astro:before-preparation', function (e) {
          const fromIdx = getIndex(window.location.pathname)
          const toIdx = getIndex(new URL(e.to, window.location.origin).pathname)
          pendingDir = 'none'
          if (fromIdx >= 0 && toIdx >= 0 && fromIdx !== toIdx) {
            pendingDir = toIdx > fromIdx ? 'forward' : 'backward'
          }
        })

        document.addEventListener('astro:after-swap', function () {
          const main = document.getElementById('main-content')
          if (!main || pendingDir === 'none') return
          const anim = pendingDir === 'forward' ? 'slide-in-from-right' : 'slide-in-from-left'
          main.style.animation = 'none'
          void main.offsetHeight // force reflow to restart animation
          main.style.animation = anim + ' 150ms cubic-bezier(0.4, 0, 0.2, 1) both'
          main.addEventListener('animationend', function handler() {
            main.style.animation = ''
            main.removeEventListener('animationend', handler)
          })
          pendingDir = 'none'
        })
      })()
    </script>
    <script is:inline>
      ;(function () {
        const chars = '!@#$%^&*_+-=[]{}|;:<>?/~0123456789'
        let interval = null
        let mx = 0
        let my = 0

        function spawn() {
          const p = document.createElement('span')
          p.className = 'mouse-particle'
          p.textContent = chars[Math.floor(Math.random() * chars.length)]
          const angle = Math.random() * Math.PI * 2
          const dist = 15 + Math.random() * 35
          p.style.left = mx + 'px'
          p.style.top = my + 'px'
          p.style.setProperty('--dx', Math.cos(angle) * dist + 'px')
          p.style.setProperty('--dy', Math.sin(angle) * dist + 'px')
          document.body.appendChild(p)
          p.addEventListener('animationend', function () { p.remove() })
        }

        document.addEventListener('mousemove', function (e) {
          mx = e.pageX
          my = e.pageY
        })

        document.addEventListener('mousedown', function (e) {
          mx = e.pageX
          my = e.pageY
          spawn()
          interval = setInterval(spawn, 50)
        })

        document.addEventListener('mouseup', function () {
          clearInterval(interval)
          interval = null
        })
      })()
    </script>
  </body>
</html>

<style is:global>
  @import '../styles/fonts.css';
  @import '../styles/tokens.css';
  @import '../styles/typography.css';
  @import '../styles/animations.css';
  @import '../styles/crt.css';

  .skip-link {
    position: absolute;
    top: -100%;
    left: 0;
    z-index: 1100;
    padding: 0.5rem 1rem;
    background: var(--accent);
    color: var(--bg);
    text-decoration: none;
  }

  .skip-link:focus {
    top: 0;
  }

  /* Minimal reset */
  *,
  *::before,
  *::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-size: 1.05rem;
    -webkit-text-size-adjust: 100%;
  }

  body {
    font-family: 'JetBrains Mono', monospace;
    background-color: var(--bg);
    color: var(--fg);
    line-height: 1.6;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    overflow: hidden;
  }

  main {
    width: 100%;
    max-width: 80ch;
    height: 100%;
    padding: 1rem 1rem 0;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    main {
      max-height: 75vh;
    }
  }

  .page-content {
    flex: 1;
    overflow-y: auto;
    min-height: 0;
    display: flex;
    flex-direction: column;
    scrollbar-width: thin;
    scrollbar-color: var(--muted) transparent;
  }

  .page-content::before,
  .page-content::after {
    content: '';
    flex: 1;
  }

  .mouse-particle {
    position: absolute;
    pointer-events: none;
    color: var(--accent);
    opacity: 0.7;
    animation: mouse-particle-drift 1.5s ease-out forwards;
  }

  @keyframes mouse-particle-drift {
    0% {
      transform: translate(0, 0);
      opacity: 0.7;
    }
    100% {
      transform: translate(var(--dx), var(--dy));
      opacity: 0;
    }
  }
</style>
