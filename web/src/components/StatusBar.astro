---
import ThemeToggle from './ThemeToggle.astro'

interface Props {
  left?: string
  center?: string
  right?: string
}

const { left = '', center = '', right = '' } = Astro.props
---

<footer class="status-bar" aria-label="Status bar">
  <span class="zone left">{left}</span>
  <span class="zone center">{center}</span>
  <span class="zone right">
    {right}
    <ThemeToggle />
  </span>
</footer>

<style>
  .status-bar {
    margin-top: auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem 0 0.75rem;
    color: var(--muted);
  }

  .zone {
    flex: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .left {
    text-align: left;
  }

  .center {
    text-align: center;
  }

  .right {
    text-align: right;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 0.5rem;
  }

  @media (max-width: 640px) {
    .center {
      display: none;
    }
  }
</style>
