---
interface Props {
  left?: string
  center?: string
  right?: string
}

const { left = '', center = '', right = '' } = Astro.props
---

<footer class="status-bar" aria-label="Status bar">
  <span class="zone left">{left}</span>
  <span class="zone center">{center}</span>
  <span class="zone right">{right}</span>
</footer>

<style>
  .status-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.25rem 1rem;
    background-color: var(--border);
    color: var(--muted);
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    z-index: 100;
    border-top: 1px solid var(--muted);
  }

  .zone {
    flex: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .left {
    text-align: left;
  }

  .center {
    text-align: center;
  }

  .right {
    text-align: right;
  }
</style>
