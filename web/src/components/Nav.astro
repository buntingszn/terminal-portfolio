---
interface Props {
  current?: string
}

const { current = '' } = Astro.props

const links = [
  { href: '/', label: 'home', num: 1 },
  { href: '/work', label: 'work', num: 2 },
  { href: '/cv', label: 'cv', num: 3 },
  { href: '/links', label: 'links', num: 4 },
]
---

<nav aria-label="Main navigation">
  <span class="border-char" aria-hidden="true">&#x250C;&#x2500;</span>{
    links.map((link) => (
      <>
        <a
          href={link.href}
          class:list={[{ active: current === link.label }]}
          aria-current={current === link.label ? 'page' : undefined}
          data-nav-tab
        >
          <span class="tab-num">{link.num}:</span><span class="tab-label-full">{link.label}</span><span class="tab-label-short">{link.label.slice(0, 2)}</span><span class="tab-label-num">{link.num}</span>
        </a>
        <span class="border-char tab-sep" aria-hidden="true">&#x2500;</span>
      </>
    ))
  }<span class="border-fill" aria-hidden="true"></span><span class="border-char" aria-hidden="true">&#x2510;</span>
</nav>

<style>
  nav {
    width: 100%;
    padding: 0.75rem 0;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9rem;
    line-height: 1;
    white-space: nowrap;
    overflow: hidden;
  }

  .border-char {
    color: var(--border);
    flex-shrink: 0;
    user-select: none;
  }

  .border-fill {
    flex: 1;
    min-width: 1ch;
    overflow: hidden;
    position: relative;
    color: var(--border);
  }

  .border-fill::after {
    content: '────────────────────────────────────────────────────────────────────────────────────────────────────';
    position: absolute;
    left: 0;
    top: 0;
  }

  a {
    color: var(--muted);
    text-decoration: none;
    flex-shrink: 0;
    transition: color 0.2s ease;
  }

  a::before {
    content: '[';
    color: var(--border);
  }

  a::after {
    content: ']';
    color: var(--border);
  }

  a:hover {
    color: var(--fg);
  }

  a:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
  }

  a.active {
    color: var(--accent);
    font-weight: 700;
    animation: tab-glow-pulse 600ms ease-in-out 1;
  }

  .tab-num {
    /* Always show number prefix */
  }

  /* Responsive label visibility */
  .tab-label-short,
  .tab-label-num {
    display: none;
  }

  @media (max-width: 400px) {
    .tab-label-full {
      display: none;
    }
    .tab-label-short {
      display: inline;
    }
  }

  @media (max-width: 280px) {
    .tab-label-full,
    .tab-label-short {
      display: none;
    }
    .tab-label-num {
      display: inline;
    }
    .tab-num {
      display: none;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    a.active {
      animation: none;
    }
  }
</style>
