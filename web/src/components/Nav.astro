---
interface Props {
  current?: string
}

const { current = '' } = Astro.props

const links = [
  { href: '/', label: 'home' },
  { href: '/work', label: 'work' },
  { href: '/cv', label: 'cv' },
  { href: '/links', label: 'links' },
]
---

<nav aria-label="Main navigation">
  {
    links.map((link) => (
      <a
        href={link.href}
        class:list={[{ active: current === link.label }]}
        aria-current={current === link.label ? 'page' : undefined}
        data-nav-tab
      >
        {link.label}
      </a>
    ))
  }
</nav>

<style>
  nav {
    width: 100%;
    padding: 0.75rem 0;
    margin-bottom: 2rem;
    display: flex;
    gap: 1.5rem;
    align-items: center;
    line-height: 1;
  }

  a {
    color: var(--muted);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  a:hover {
    color: var(--fg);
  }

  a:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
  }

  a.active {
    color: var(--accent);
    font-weight: 700;
    animation: tab-glow-pulse 600ms ease-in-out 1;
  }

  @media (prefers-reduced-motion: reduce) {
    a.active {
      animation: none;
    }
  }
</style>
