---
interface Props {
  current?: string
}

const { current = '' } = Astro.props

const links = [
  { href: '/', label: 'home' },
  { href: '/work', label: 'work' },
  { href: '/cv', label: 'cv' },
  { href: '/links', label: 'links' },
]
---

<nav aria-label="Main navigation">
  <ul>
    {
      links.map((link) => (
        <li>
          <a
            href={link.href}
            class={current === link.label ? 'active' : ''}
            aria-current={current === link.label ? 'page' : undefined}
          >
            [{link.label}]
          </a>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  nav {
    width: 100%;
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--border);
    margin-bottom: 1.5rem;
  }

  ul {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  a {
    color: var(--muted);
    text-decoration: none;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9rem;
    padding: 0.15rem 0.25rem;
    transition: color 0.2s ease;
  }

  a:hover {
    color: var(--fg);
  }

  a:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
  }

  a.active {
    color: var(--accent);
    font-weight: 700;
  }
</style>
