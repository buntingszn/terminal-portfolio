---
import Base from '@layouts/Base.astro'
import Nav from '@components/Nav.astro'
import StatusBar from '@components/StatusBar.astro'
import { getMeta, getLinks } from '../lib/data'

const meta = getMeta()
const { links } = getLinks()

const iconMap: Record<string, string> = {
  github: 'gh',
  mail: '@',
  linkedin: 'in',
  terminal: '>_',
}

function getIcon(icon: string): string {
  return iconMap[icon] ?? '>'
}
---

<Base
  title={`Links | ${meta.name}`}
  description="External links and social profiles"
>
  <Nav current="links" />

  <div class="page-content">
  <section class="link-section" aria-label="External links">
    <ul class="link-list">
      {
        links.map((link) => (
          <li>
            <a href={link.url} target="_blank" rel="noopener">
              <span class="hover-prefix" aria-hidden="true">
                &gt;
              </span>
              <span class="icon">{getIcon(link.icon)}</span>
              <span class="link-content">
                <span class="label">{link.label}</span>
                <span class="url">{link.text || link.url}</span>
              </span>
            </a>
          </li>
        ))
      }
    </ul>
  </section>
  </div>

  <StatusBar center="←/→ nav · ? help" />
</Base>

<style>
  .link-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.75rem;
  }

  @media (max-width: 640px) {
    .link-list {
      grid-template-columns: 1fr;
    }
  }

  .link-list a {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    color: var(--fg);
    text-decoration: none;
    padding: 0.4rem 0;
    transition: color 0.2s ease;
  }

  .link-list a:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
  }

  .hover-prefix {
    color: var(--accent);
    width: 1ch;
    flex-shrink: 0;
    opacity: 0;
    transition: opacity 0.15s ease;
  }

  .link-list a:hover .hover-prefix {
    opacity: 1;
  }

  .icon {
    color: var(--accent);
    width: 2ch;
    flex-shrink: 0;
    text-align: center;
    font-weight: 700;
  }

  .link-content {
    display: flex;
    flex-direction: column;
    min-width: 0;
  }

  .label {
    font-weight: 700;
    transition: color 0.2s ease;
  }

  .link-list a:hover .label {
    color: var(--accent);
  }

  .url {
    color: var(--muted);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
</style>
