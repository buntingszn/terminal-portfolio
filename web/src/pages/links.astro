---
import Base from '@layouts/Base.astro'
import Nav from '@components/Nav.astro'
import StatusBar from '@components/StatusBar.astro'
import AsciiBox from '@components/AsciiBox.astro'
import { getMeta, getLinks } from '../lib/data'

const meta = getMeta()
const { links } = getLinks()

const iconMap: Record<string, string> = {
  github: '◆',
  mail: '✉',
  linkedin: '◈',
  terminal: '>_',
}

function getIcon(icon: string): string {
  return iconMap[icon] ?? '›'
}
---

<Base
  title={`Links | ${meta.name}`}
  description="External links and social profiles"
>
  <Nav current="links" />

  <h1>Links</h1>

  <AsciiBox title="connections">
    <ul class="link-list">
      {
        links.map((link) => (
          <li>
            <a href={link.url} target="_blank" rel="noopener">
              <span class="icon">{getIcon(link.icon)}</span>
              <span class="label">{link.label}</span>
              <span class="url">&mdash; {link.url}</span>
            </a>
          </li>
        ))
      }
    </ul>
  </AsciiBox>

  <StatusBar
    left="~/links"
    center="j/k scroll · 1-4 nav · ? help"
    right="LINKS"
  />
</Base>

<style>
  h1 {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    color: var(--fg);
  }

  .link-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .link-list li {
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--border);
  }

  .link-list li:last-child {
    border-bottom: none;
  }

  .link-list li:hover {
    background-color: color-mix(in srgb, var(--accent) 8%, transparent);
  }

  .link-list a {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    color: var(--fg);
    text-decoration: none;
    padding: 0.25rem 0;
    transition: color 0.2s ease;
  }

  .link-list a:hover .label {
    color: var(--accent);
  }

  .link-list a:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
  }

  .icon {
    color: var(--accent);
    width: 2ch;
    flex-shrink: 0;
    text-align: center;
    font-size: 0.9rem;
  }

  .label {
    font-weight: 700;
    white-space: nowrap;
    transition: color 0.2s ease;
  }

  .url {
    color: var(--muted);
    font-size: 0.85rem;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    min-width: 0;
  }
</style>
