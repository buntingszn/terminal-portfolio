---
import Base from '@layouts/Base.astro'
import Nav from '@components/Nav.astro'
import StatusBar from '@components/StatusBar.astro'
import { getMeta, getCv } from '../lib/data'

const meta = getMeta()
const cv = getCv()
---

<Base title={`cv | ${meta.name}`} description={cv.summary}>
  <Nav current="cv" />

  <div class="page-content">
  <section class="cv" aria-label="CV">
    <div class="header">
      <span class="name">{meta.name}</span>
      <p class="contact">
        <a href={`mailto:${cv.contact.email}`}>{cv.contact.email}</a> &middot; {cv.contact.location}
      </p>
      <p class="summary">{cv.summary}</p>
    </div>

    <div class="divider" role="separator"><span>&nbsp; experience &nbsp;</span></div>

    {
      cv.experience.map((job) => (
        <div class="entry">
          <div class="entry-header">
            <span>
              <span class="role">{job.role}</span>
              <span class="muted"> @ {job.company}</span>
            </span>
            <span class="date">{job.start} &ndash; {job.end}</span>
          </div>
          <ul>
            {job.bullets.map((bullet) => (
              <li set:html={
                bullet.replace(
                  /\b(TypeScript|React|Next\.js|Hono|Astro|Go|Shell|Ruby on Rails|Elixir|ComfyUI|Flux|LoRA|CI\/CD|CMS|CMMS|RAG|LLM|SSH|AI)\b/g,
                  '<code>$1</code>'
                )
              } />
            ))}
          </ul>
        </div>
      ))
    }

    <div class="divider" role="separator"><span>&nbsp; skills &nbsp;</span></div>

    <div class="skills-grid">
    {
      cv.skills.map((group) => (
        <p class="skill-line">
          <span class="key">{group.category}</span>: {group.items.join(', ')}
        </p>
      ))
    }
    </div>

    <div class="divider" role="separator"><span>&nbsp; education &nbsp;</span></div>

    {
      cv.education.map((edu) => (
        <div class="edu-entry">
          <p>
            <span class="role">{edu.degree}</span>
            <span class="muted"> @ {edu.institution}</span>
          </p>
          <p class="muted">{edu.year}</p>
        </div>
      ))
    }
  </section>
  </div>

  <StatusBar center="←/→ nav · ? help" />
</Base>

<style>
  .cv {
    font-size: inherit;
  }

  .header {
    margin-bottom: 1rem;
  }

  .name {
    font-weight: 700;
    color: var(--accent);
  }

  .contact {
    color: var(--muted);
    margin-bottom: 0.5rem;
  }

  .contact a {
    color: var(--muted);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .contact a:hover {
    color: var(--accent);
  }

  .summary {
    margin-bottom: 0;
    line-height: 1.6;
  }

  /* Section dividers — reverse video */
  .divider {
    margin: 1.25rem 0;
    user-select: none;
  }

  .divider span {
    display: inline-block;
    background: var(--accent);
    color: var(--bg);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    white-space: nowrap;
    padding: 1px 0;
  }

  /* Key-value styling */
  .key {
    color: var(--accent);
    font-weight: 700;
  }

  /* Role / degree titles — underline */
  .role {
    color: var(--accent);
    font-weight: 700;
    text-decoration: underline;
    text-underline-offset: 3px;
    text-decoration-color: var(--accent);
  }

  /* Experience entries */
  .entry {
    margin-bottom: 1.25rem;
  }

  .entry:last-of-type {
    margin-bottom: 0;
  }

  .entry-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 0.25rem;
  }

  /* Left border indent for bullet lists */
  .entry ul {
    list-style: none;
    padding-left: 1rem;
    margin-bottom: 0;
    margin-left: 0.5rem;
    border-left: 2px solid var(--border);
  }

  .entry li::before {
    content: '- ';
  }

  .entry li {
    color: var(--fg);
    margin-bottom: 0.15rem;
  }

  /* Inline code tags — hover reveal */
  .entry li :global(code) {
    background-color: transparent;
    padding: 1px 4px;
    border-radius: 2px;
    font-size: inherit;
    transition: background-color 0.2s ease;
  }

  .entry:hover li :global(code) {
    background-color: var(--border);
  }

  /* Accent dates — right-aligned */
  .date {
    color: var(--accent);
    font-weight: 700;
  }

  /* Skills — two-column grid */
  .skills-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.25rem 2rem;
  }

  .skill-line {
    margin-bottom: 0.35rem;
    line-height: 1.6;
  }

  .skill-line:last-of-type {
    margin-bottom: 0;
  }

  /* Education */
  .edu-entry {
    margin-bottom: 0.5rem;
  }

  .edu-entry:last-of-type {
    margin-bottom: 0;
  }

  .edu-entry p {
    margin-bottom: 0;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .entry-header {
      flex-direction: column;
      gap: 0.15rem;
    }

    .skills-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
