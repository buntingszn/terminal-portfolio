---
import Base from '@layouts/Base.astro'
import Nav from '@components/Nav.astro'
import StatusBar from '@components/StatusBar.astro'
import { getMeta, getCv } from '../lib/data'

const meta = getMeta()
const cv = getCv()
---

<Base title={`cv | ${meta.name}`} description={cv.summary}>
  <Nav current="cv" />

  <div class="page-content">
  <section class="cv" aria-label="CV">
    <div class="header">
      <span class="name">{meta.name}</span>
      <p class="contact">
        {cv.contact.email} &middot; {cv.contact.location} &middot; <a href={cv.contact.website}>{cv.contact.website}</a>
      </p>
      <p class="summary">{cv.summary}</p>
    </div>

    <div class="divider" role="separator"><span>experience</span></div>

    {
      cv.experience.map((job) => (
        <div class="entry">
          <div class="entry-header">
            <span>
              <span class="key">{job.role}</span>
              <span class="muted"> @ {job.company}</span>
            </span>
            <span class="muted">{job.start} &ndash; {job.end}</span>
          </div>
          <ul>
            {job.bullets.map((bullet) => (
              <li>{bullet}</li>
            ))}
          </ul>
        </div>
      ))
    }

    <div class="divider" role="separator"><span>skills</span></div>

    {
      cv.skills.map((group) => (
        <p class="skill-line">
          <span class="key">{group.category}</span>: {group.items.join(', ')}
        </p>
      ))
    }

    <div class="divider" role="separator"><span>education</span></div>

    {
      cv.education.map((edu) => (
        <div class="edu-entry">
          <p>
            <span class="key">{edu.degree}</span>
            <span class="muted"> @ {edu.institution}</span>
          </p>
          <p class="muted">{edu.year}</p>
        </div>
      ))
    }
  </section>
  </div>

  <StatusBar center="←/→ nav · r random · ? help" />
</Base>

<style>
  .cv {
    font-size: inherit;
  }

  .header {
    margin-bottom: 1rem;
  }

  .name {
    font-weight: 700;
    color: var(--accent);
  }

  .contact {
    color: var(--muted);
    margin-bottom: 0.5rem;
  }

  .contact a {
    color: var(--muted);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .contact a:hover {
    color: var(--accent);
  }

  .summary {
    margin-bottom: 0;
    line-height: 1.6;
  }

  /* Section dividers */
  .divider {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--border);
    margin: 1.25rem 0;
    user-select: none;
  }

  .divider::before,
  .divider::after {
    content: '';
    flex: 1;
    border-top: 1px solid var(--border);
  }

  .divider span {
    color: var(--accent);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    white-space: nowrap;
  }

  /* Key-value styling */
  .key {
    color: var(--accent);
    font-weight: 700;
  }

  /* Experience entries */
  .entry {
    margin-bottom: 1.25rem;
  }

  .entry:last-of-type {
    margin-bottom: 0;
  }

  .entry-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 0.25rem;
  }

  .entry ul {
    list-style: none;
    padding-left: 1.5rem;
    margin-bottom: 0;
  }

  .entry li::before {
    content: '- ';
  }

  .entry li {
    color: var(--fg);
    margin-bottom: 0.15rem;
  }

  /* Skills */
  .skill-line {
    margin-bottom: 0.35rem;
    line-height: 1.6;
  }

  .skill-line:last-of-type {
    margin-bottom: 0;
  }

  /* Education */
  .edu-entry {
    margin-bottom: 0.5rem;
  }

  .edu-entry:last-of-type {
    margin-bottom: 0;
  }

  .edu-entry p {
    margin-bottom: 0;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .entry-header {
      flex-direction: column;
      gap: 0.15rem;
    }
  }
</style>
