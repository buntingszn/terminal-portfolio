---
import Base from '@layouts/Base.astro'
import Nav from '@components/Nav.astro'
import StatusBar from '@components/StatusBar.astro'
import GradientHeading from '@components/GradientHeading.astro'
import AsciiDivider from '@components/AsciiDivider.astro'
import { getMeta, getAbout } from '../lib/data'

const meta = getMeta()
const about = getAbout()

// Load ASCII portrait as raw text
import portraitRaw from '@data/assets/portrait.ascii.txt?raw'
---

<Base title={meta.name} description={meta.oneLiner}>
  <Nav current="home" />

  <section class="hero" aria-label="Introduction">
    <GradientHeading text={meta.name} />
    <p class="title">{meta.title}</p>
    <p class="muted">{meta.oneLiner}</p>
  </section>

  <AsciiDivider />

  <section class="about" aria-label="About">
    <div class="about-content">
      <div class="about-text">
        <h2>About</h2>
        <p>{about.bio}</p>

        <div class="details">
          <p><span class="label">Location:</span> {about.location}</p>
          <p><span class="label">Status:</span> {about.status}</p>
        </div>

        <div class="interests">
          <span class="label">Interests:</span>
          <ul>
            {about.interests.map((interest: string) => <li>{interest}</li>)}
          </ul>
        </div>

        <div class="education">
          <span class="label">Education:</span>
          {
            about.education.map(
              (edu: { degree: string; institution: string; year: string }) => (
                <p class="muted">
                  {edu.degree}, {edu.institution} ({edu.year})
                </p>
              ),
            )
          }
        </div>
      </div>

      <div class="portrait-container" aria-hidden="true">
        <pre class="portrait">{portraitRaw}</pre>
        <div class="portrait-shimmer"></div>
      </div>
    </div>
  </section>

  <StatusBar
    left="~/home"
    center="j/k scroll · 1-4 nav · ? help"
    right="HOME"
  />
</Base>

<style>
  .hero {
    text-align: center;
    padding: 2rem 0 1rem;
  }

  .hero :global(.gradient-heading) {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .hero .title {
    color: var(--fg);
    font-size: 1.1rem;
    margin-bottom: 0.25rem;
  }

  .hero .muted {
    color: var(--muted);
    font-size: 0.95rem;
  }

  .about {
    padding: 0.5rem 0 2rem;
  }

  .about h2 {
    margin-bottom: 1rem;
  }

  .about-content {
    display: flex;
    gap: 2rem;
    align-items: flex-start;
  }

  .about-text {
    flex: 1;
    min-width: 0;
  }

  .details {
    margin-bottom: 1rem;
  }

  .details p {
    margin-bottom: 0.25rem;
  }

  .label {
    color: var(--accent);
    font-weight: 700;
  }

  .interests {
    margin-bottom: 1rem;
  }

  .interests ul {
    margin-top: 0.25rem;
    padding-left: 1.5rem;
  }

  .interests li {
    color: var(--fg);
  }

  .education {
    margin-bottom: 1rem;
  }

  .education p {
    margin-top: 0.25rem;
    margin-bottom: 0.25rem;
  }

  /* Portrait with shimmer */
  .portrait-container {
    flex-shrink: 0;
    position: relative;
    overflow: hidden;
  }

  .portrait {
    color: var(--muted);
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.7rem;
    line-height: 1.2;
    background: none;
    padding: 0;
    margin: 0;
    white-space: pre;
    user-select: none;
  }

  .portrait-shimmer {
    position: absolute;
    inset: 0;
    pointer-events: none;
    mix-blend-mode: screen;
    animation: shimmer-breathe 10s ease-in-out infinite;
    background:
      radial-gradient(
          ellipse 60% 40% at 30% 40%,
          color-mix(in srgb, var(--fg) 12%, transparent) 0%,
          transparent 70%
        )
        no-repeat,
      radial-gradient(
          ellipse 50% 50% at 70% 60%,
          color-mix(in srgb, var(--fg) 8%, transparent) 0%,
          transparent 70%
        )
        no-repeat,
      radial-gradient(
          ellipse 40% 60% at 50% 30%,
          color-mix(in srgb, var(--fg) 10%, transparent) 0%,
          transparent 70%
        )
        no-repeat;
  }

  .portrait-shimmer::before,
  .portrait-shimmer::after {
    content: '';
    position: absolute;
    inset: -20%;
    border-radius: 50%;
  }

  .portrait-shimmer::before {
    background: radial-gradient(
      ellipse at center,
      color-mix(in srgb, var(--fg) 6%, transparent) 0%,
      transparent 70%
    );
    animation: shimmer-drift-1 4s ease-in-out infinite;
  }

  .portrait-shimmer::after {
    background: radial-gradient(
      ellipse at center,
      color-mix(in srgb, var(--fg) 5%, transparent) 0%,
      transparent 70%
    );
    animation: shimmer-drift-2 6s ease-in-out infinite;
  }

  @media (max-width: 640px) {
    .about-content {
      flex-direction: column;
    }

    .portrait-container {
      display: none;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .portrait-shimmer {
      animation: none;
      opacity: 0.85;
    }
    .portrait-shimmer::before,
    .portrait-shimmer::after {
      animation: none;
    }
  }
</style>
