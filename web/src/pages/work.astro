---
import Base from '@layouts/Base.astro'
import Nav from '@components/Nav.astro'
import StatusBar from '@components/StatusBar.astro'
import { getMeta, getWork } from '../lib/data'

const meta = getMeta()
const { projects } = getWork()
const sorted = [...projects].sort((a, b) => Number(b.featured) - Number(a.featured))
---

<Base title={`Work | ${meta.name}`} description="Projects and work">
  <Nav current="work" />

  <div class="page-content">
  <section class="project-list" aria-label="Projects">
    <ul class="projects">
      {
        sorted.map((project) => (
          <li>
            <a
              href={project.url || project.repo}
              target="_blank"
              rel="noopener"
            >
              <span class="hover-prefix" aria-hidden="true">&gt;</span>
              <span class="project-content">
                <span class="label">{project.title}</span>
                <span class="desc">{project.description}</span>
                {project.tags.length > 0 && (
                  <span class="tags">
                    {project.tags.map((tag) => (
                      <code>{tag}</code>
                    ))}
                  </span>
                )}
              </span>
            </a>
          </li>
        ))
      }
    </ul>
  </section>
  </div>

  <StatusBar center="←/→ nav · ? help" />
</Base>

<style>
  .projects {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.5rem;
  }

  @media (max-width: 640px) {
    .projects {
      grid-template-columns: 1fr;
    }
  }

  .projects a {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    color: var(--fg);
    text-decoration: none;
    padding: 0.25rem 0;
    transition: color 0.2s ease;
  }

  .projects a:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
  }

  .hover-prefix {
    color: var(--accent);
    width: 1ch;
    flex-shrink: 0;
    opacity: 0;
    transition: opacity 0.15s ease;
  }

  .projects a:hover .hover-prefix {
    opacity: 1;
  }

  .project-content {
    display: flex;
    flex-direction: column;
    min-width: 0;
  }

  .label {
    font-weight: 700;
    transition: color 0.2s ease;
  }

  .projects a:hover .label {
    color: var(--accent);
  }

  .desc {
    color: var(--muted);
  }

  /* Tags — hover reveal */
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.25rem;
    margin-top: 0.25rem;
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .projects a:hover .tags {
    opacity: 1;
  }

  .tags code {
    background: var(--border);
    padding: 1px 4px;
    border-radius: 2px;
    font-size: inherit;
    font-family: inherit;
    color: var(--muted);
  }

  @media (hover: none) {
    .tags {
      opacity: 1;
    }
  }
</style>
