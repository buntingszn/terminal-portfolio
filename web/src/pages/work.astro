---
import Base from '@layouts/Base.astro'
import Nav from '@components/Nav.astro'
import StatusBar from '@components/StatusBar.astro'
import { getMeta, getWork } from '../lib/data'

const meta = getMeta()
const { projects } = getWork()
const sorted = [...projects].sort((a, b) => Number(b.featured) - Number(a.featured))
---

<Base title={`Work | ${meta.name}`} description="Projects and work">
  <Nav current="work" />

  <div class="page-content">
  <section class="project-list" aria-label="Projects">
    <ul class="projects">
      {
        sorted.map((project) => (
          <li data-egg={project.title === 'Ralph Idle Timer' ? 'ralph' : undefined}>
            <a
              href={project.url || project.repo}
              target="_blank"
              rel="noopener"
            >
              <span class="hover-prefix" aria-hidden="true">&gt;</span>
              <span class="project-content">
                <span class="label">
                  {project.featured && <span class="featured-star" aria-label="Featured">★ </span>}
                  {project.title}
                </span>
                <span class="desc">{project.description}</span>
              </span>
            </a>
          </li>
        ))
      }
    </ul>
  </section>
  </div>

  <StatusBar center="←/→ nav · ? help" />

  <img
    id="ralph-egg"
    src="/images/ralph.png"
    alt=""
    aria-hidden="true"
    class="ralph-egg"
  />
</Base>

<script>
  function initRalph() {
    const trigger = document.querySelector('[data-egg="ralph"]')
    const ralph = document.getElementById('ralph-egg') as HTMLImageElement
    if (!trigger || !ralph) return

    trigger.addEventListener('mouseenter', () => {
      ralph.classList.add('visible')
    })
    trigger.addEventListener('mouseleave', () => {
      ralph.classList.remove('visible')
    })
  }

  initRalph()
  document.addEventListener('astro:after-swap', initRalph)
</script>

<style>
  .projects {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.75rem;
  }

  @media (max-width: 640px) {
    .projects {
      grid-template-columns: 1fr;
    }
  }

  .projects a {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    color: var(--fg);
    text-decoration: none;
    padding: 0.4rem 0;
    transition: color 0.2s ease;
  }

  .projects a:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
  }

  .hover-prefix {
    color: var(--accent);
    width: 1ch;
    flex-shrink: 0;
    opacity: 0;
    transition: opacity 0.15s ease;
  }

  .projects a:hover .hover-prefix {
    opacity: 1;
  }

  .project-content {
    display: flex;
    flex-direction: column;
    min-width: 0;
  }

  .label {
    font-weight: 700;
    transition: color 0.2s ease;
  }

  .featured-star {
    color: var(--accent);
  }

  .projects a:hover .label {
    color: var(--accent);
  }

  .desc {
    color: var(--muted);
  }

  .ralph-egg {
    position: fixed;
    bottom: -200px;
    left: 2rem;
    width: 150px;
    z-index: 999;
    pointer-events: none;
    transition: bottom 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .ralph-egg.visible {
    bottom: 0;
  }
</style>
